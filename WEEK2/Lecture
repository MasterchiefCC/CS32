#include<iostream>
#include<cstring>
class string {
public:
	string(const char*value="");
	~string();
private:
	char*m_text;
	int m_len;
	/*Invariant:
	either:
	m_text points to an array of char
	m_len>0
	||
	m_text points to an nullptr
	m_len=0
	*/
};

string::string(const char*value) {
	m_len = strlen(value);
	m_text = new char[m_len+1];
	strcpy(m_text, value);
}

string::~string() {
	delete []  m_text;
}
int main() {
	string t("cde");

	return 0;
}
